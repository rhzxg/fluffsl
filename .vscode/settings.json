{
	"editor.insertSpaces": false,
	"editor.semanticTokenColorCustomizations": {
		"enabled": true, // enable for all themes
		"rules": {
			"bracket0": {
				"foreground": "#986f0d"
			},
			"bracket1": {
				"foreground": "#007575"
			},
			"bracket2": {
				"foreground": "#0078d4"
			},
			"bracket3": {
				"foreground": "#2d0097"
			},
			"bracket4": {
				"foreground": "#cc0073"
			},
		}
	},

	"fluffsl.keywords": [
		"STRUCT", "DATA", "INIT_MAIN", "RETURN",
		"if", "else", "for", "while", "do",
		"continue", "break", "discard"
	],
	"fluffsl.types": [
		"void", "float", "float2", "float3", "float4",
		"int", "int2", "int3", "int4",
		"uint", "uint2", "uint3", "uint4",
		"bool", "float4x4", "float3x3",
		"texture2D", "sampler2D"
	],
	"fluffsl.functions": [
		"mul", "normalize", "dot", "max", "min", "length",
		"Get", "texture", "abs", "sin", "cos", "tan", "pow", "sqrt"
	],
	"fluffsl.semantics": [
		"POSITION", "NORMAL", "COLOR",
		"SV_Position", "SV_Target", "SV_InstanceID"
	]
}